<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Xamarin.iOS.Sdk">
  <PropertyGroup>
    <TargetFramework>xamarinios10</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Web.Services" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Views\RazorView.cs">
      <DependentUpon>RazorView.cshtml</DependentUpon>
    </Compile>
  </ItemGroup>
  <PropertyGroup>
    <DefaultItemExcludes>$(DefaultItemExcludes);Views\RazorView.cs</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Views\RazorView.cshtml">
      <Generator>RazorTemplatePreprocessor</Generator>
    </None>
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetDeviceArchitecture)' == 'Simulator' ">
    <CodesignEntitlements>None</CodesignEntitlements>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetDeviceArchitecture)' == 'Device'">
    <MtouchArch>ARMv7, ARM64</MtouchArch>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetDeviceArchitecture)' == 'Device' And '$(Configuration)' == 'Debug'">
    <MtouchProfiling>true</MtouchProfiling>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MyDocumentPickerExtension\MyDocumentPickerExtension.dotnet.csproj">
      <Name>MyDocumentPickerExtension</Name>
      <IsAppExtension>True</IsAppExtension>
    </ProjectReference>
  </ItemGroup>
</Project>
