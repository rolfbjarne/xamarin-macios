<?xml version="1.0" encoding="utf-8"?>
<Project>
	<PropertyGroup>
		<OutputType>Exe</OutputType>

		<ApplicationTitle>MySimpleApp</ApplicationTitle>
		<ApplicationId>com.xamarin.mysimpleapp</ApplicationId>
		<ApplicationVersion>3.14</ApplicationVersion>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="../*.cs" />
		<None Include="Info.plist" />

		<!-- Set CopyToOutputDirectory=true for some items -->
		<None Update="A.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="D.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Sub/B.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<!-- outside the project directory -->
		<None Include="../C.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<!-- With Link -->
		<None Include="A.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>Somewhere</Link>
		</None>
		<!-- With Link + relative path -->
		<None Include="A.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>../Somewhere/Else</Link>
		</None>
	</ItemGroup>
</Project>
