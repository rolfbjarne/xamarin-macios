<Project>
  <Import Project="../targets/Xamarin.Shared.Sdk.Versions.props" />
  <PropertyGroup>
    <TargetFramework>netcoreapp5.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PackageId>Xamarin.$(_PlatformName).Sdk</PackageId>
    <PackageVersion>$(_PackageVersion)</PackageVersion>
    <RepositoryUrl>https://github.com/xamarin/xamarin-macios</RepositoryUrl>
    <RepositoryBranch>$(CurrentBranch)</RepositoryBranch>
    <RepositoryCommit>$(CurrentHash)</RepositoryCommit>
    <Authors>Xamarin</Authors>
    <Description>C# Tools and Bindings for the $(_PlatformName) SDK</Description>
    <OutputPath>_build\$(_PlatformName)</OutputPath>

    <!-- NU5105: The package version '#.#.#-alpha.##+hash' uses SemVer 2.0.0 or components of SemVer 1.0.0 that are not supported on legacy clients. Change the package version to a SemVer 1.0.0 string. If the version contains a release label it must start with a letter. This message can be ignored if the package is not intended for older clients. -->
    <NoWarn>$(NoWarn);NU5105</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <_RepositoryPath>$(MSBuildThisFileDirectory)/../../..</_RepositoryPath>
    <_buildPath>$(_RepositoryPath)/_build</_buildPath>
    <_iOSBuildPath>$(_RepositoryPath)/_ios-build</_iOSBuildPath>
    <_macOSBuildPath>$(_RepositoryPath)/_mac-build</_macOSBuildPath>
    <_iOSCurrentPath>$(_iOSBuildPath)/Library/Frameworks/Xamarin.iOS.framework/Versions/Current</_iOSCurrentPath>
    <_macOSCurrentPath>$(_macOSBuildPath)/Library/Frameworks/Xamarin.Mac.framework/Versions/Current</_macOSCurrentPath>
    <_OSCurrentPath Condition=" '$(_PlatformName)' != 'macOS' ">$(_iOSCurrentPath)</_OSCurrentPath>
    <_OSCurrentPath Condition=" '$(_PlatformName)' == 'macOS' ">$(_macOSCurrentPath)</_OSCurrentPath>
  </PropertyGroup>

  <PropertyGroup>
    <_TFI Condition=" '$(_PlatformName)' == 'iOS' ">Xamarin.iOS</_TFI>
    <_TFI Condition=" '$(_PlatformName)' == 'tvOS' ">Xamarin.TVOS</_TFI>
    <_TFI Condition=" '$(_PlatformName)' == 'watchOS' ">Xamarin.WatchOS</_TFI>
    <_TFI Condition=" '$(_PlatformName)' == 'macOS' ">Xamarin.Mac</_TFI>
    <_BinDir>tools\bin</_BinDir>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(_buildPath)\Xamarin.$(_PlatformName).Sdk\**">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
</Project>
