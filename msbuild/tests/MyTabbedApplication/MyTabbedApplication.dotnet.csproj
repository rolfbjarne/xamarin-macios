<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Xamarin.iOS.Sdk">
  <PropertyGroup>
    <TargetFramework>xamarinios10</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetDeviceArchitecture)' == 'Simulator' ">
    <CodesignEntitlements>None</CodesignEntitlements>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetDeviceArchitecture)' == 'Device' ">
    <MtouchArch>ARMv7, ARM64</MtouchArch>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetDeviceArchitecture)' == 'Device' And '$(Configuration)' == 'Debug'">
    <MtouchProfiling>true</MtouchProfiling>
  </PropertyGroup>

  <ItemGroup>
    <BundleResource Include="Resources\first.png" />
    <BundleResource Include="Resources\first%402x.png" />
    <BundleResource Include="Resources\second.png" />
    <BundleResource Include="Resources\second%402x.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MyActionExtension\MyActionExtension.dotnet.csproj">
      <IsAppExtension>True</IsAppExtension>
    </ProjectReference>
  </ItemGroup>
</Project>
